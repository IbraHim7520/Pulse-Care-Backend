model Prescription {
    id String @id @default(uuid())

    followUpDate DateTime
    instructions String @db.Text

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt


    appointmentId String @unique
    appointment Appointment @relation(fields: [appointmentId], references: [id], onDelete: Cascade, onUpdate: Cascade )

    paitentId String
    paitent Paitent @relation(fields: [paitentId], references: [id], onDelete: Cascade, onUpdate: Cascade)

    doctorId String
    doctor Doctor @relation(fields: [doctorId], references: [id], onDelete: Cascade , onUpdate: Cascade)

    @@index([appointmentId])
    @@index([paitentId])
    @@index([doctorId])

    @@map("prescriptions")


}